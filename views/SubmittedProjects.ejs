<%- include("./partials/head", { pageTitle }) %>

<body
  class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-black text-slate-200"
>
  <%- include("./partials/navbar", { isLoggedIn, currentPage, user }) %>

  <div class="relative max-w-7xl mx-auto px-6 py-20">
    <!-- Background Glows -->
    <div
      class="absolute -top-24 -left-40 w-96 h-96 bg-indigo-600/20 blur-3xl rounded-full"
    ></div>
    <div
      class="absolute top-40 -right-40 w-96 h-96 bg-purple-600/20 blur-3xl rounded-full"
    ></div>

    <!-- Page Header -->
    <div class="relative mb-16">
      <h1
        class="text-4xl md:text-5xl font-extrabold bg-gradient-to-r from-indigo-400 via-purple-500 to-pink-500 bg-clip-text text-transparent"
      >
        Submitted Projects
      </h1>
      <p class="text-slate-400 mt-4 text-lg max-w-2xl">
        Review, verify, and approve project submissions received from
        candidates.
      </p>
    </div>

    <!-- Empty State -->
    <% if (!sub || sub.length === 0) { %>
    <div
      class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-16 text-center shadow-xl"
    >
      <p class="text-slate-400 text-lg">
        No submissions have been received yet.
      </p>
    </div>
    <% } %>

    <!-- Submissions Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% sub && sub.forEach(item => { %>

      <div
        class="group relative bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl p-6 shadow-xl hover:shadow-indigo-500/30 hover:-translate-y-1 transition-all duration-300"
      >
        <!-- User Info -->
        <div class="flex items-center gap-4 mb-6">
          <div
            class="w-12 h-12 rounded-full bg-indigo-500/20 flex items-center justify-center text-xl"
          >
            ðŸ‘¤
          </div>
          <div>
            <h2 class="text-lg font-semibold text-white">
              <%= item.username %>
            </h2>
            <p class="text-sm text-slate-400"><%= item.email %></p>
          </div>
        </div>

        <!-- Submission Details -->
        <div class="space-y-4 text-sm">
          <div class="flex justify-between items-center">
            <span class="text-slate-400">Source Code</span>
            <a
              href="<%= item.sourceCode %>"
              target="_blank"
              class="text-indigo-400 hover:text-indigo-300 hover:underline"
            >
              View Repo
            </a>
          </div>

          <% if (item.documentation?.length) { %>
          <div class="flex justify-between items-center">
            <span class="text-slate-400">Documentation</span>
            <a
              href="/uploads/work-done/<%= item.documentation[0].filename %>"
              target="_blank"
              class="text-indigo-400 hover:text-indigo-300 hover:underline"
            >
              View PDF
            </a>
          </div>
          <% } %> <% if (item.ppt?.length) { %>
          <div class="flex justify-between items-center">
            <span class="text-slate-400">Presentation</span>
            <a
              href="/uploads/work-done/<%= item.ppt[0].filename %>"
              target="_blank"
              class="text-indigo-400 hover:text-indigo-300 hover:underline"
            >
              View PPT
            </a>
          </div>
          <% } %> <% if (item.demoVideo?.length) { 
            <!-- console.log(item , "item"); -->
            %>
          <div class="flex justify-between items-center">
            <span class="text-slate-400">Demo Video</span>
            <a
              href="/uploads/work-done/<%= item.demoVideo[0].filename %>"
              target="_blank"
              class="text-indigo-400 hover:text-indigo-300 hover:underline"
            >
              Watch
            </a>
          </div>
          <% } %>
        </div>

        <!-- Supervisor Action -->
        <% if (user.userType === "supervisor") {
          console.log(item.isApprove) ;
          %>
        <form action="/supervisor/approve-user/<%= item.hostId %>/<%=item.userId%>" method="POST" class="mt-6">
          

          <button
            type="submit"
            class="w-full rounded-xl bg-gradient-to-r from-emerald-400 via-green-500 to-emerald-600 text-slate-950 font-semibold text-sm p-4 shadow-xl shadow-emerald-500/40 hover:shadow-emerald-500/70 hover:brightness-110 hover:-translate-y-0.5 active:scale-95 transition-all duration-300"
          >
          <%= item.isApprove ? "Approved" : "âœ“ Approve Submission" %>
            
          </button>
        </form>
        <% } %>

        <!-- Footer -->
        <div class="mt-6 pt-4 border-t border-white/10 text-xs text-slate-500">
          Submission received
        </div>
      </div>

      <% }) %>
    </div>
  </div>

  <%- include("./partials/footer") %>
</body>
