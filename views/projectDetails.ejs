<%- include("./partials/head", { pageTitle }) %>

<div class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-black">

  <%- include("./partials/navbar", { isLoggedIn, user }) %>

  <div class="max-w-6xl mx-auto px-6 py-16">

    <!-- PAGE HEADER -->
    <h1 class="text-4xl md:text-5xl font-extrabold text-center mb-12 
               bg-gradient-to-r from-indigo-400 via-purple-500 to-pink-500 
               bg-clip-text text-transparent">
      <%= projectDetails.title %>
    </h1>

    <!-- MAIN CARD -->
    <div class="relative bg-white/10 backdrop-blur-xl border border-white/10 
                rounded-2xl shadow-2xl p-10 group">

      <!-- Neon hover glow -->
      <div class="absolute inset-0 rounded-2xl bg-gradient-to-r 
                  from-indigo-500/20 via-purple-500/20 to-pink-500/20 opacity-0 
                  group-hover:opacity-100 transition-all duration-500"></div>

      <div class="relative z-10 grid grid-cols-1 md:grid-cols-2 gap-10">

        <!-- LEFT COLUMN -->
        <div class="space-y-8 text-slate-200">

          <!-- DOMAIN -->
          <div>
            <h3 class="text-sm text-slate-400 uppercase tracking-wide mb-1">
              Domain
            </h3>
            <p class="text-indigo-300 font-semibold text-lg">
              <%= projectDetails.domain %>
            </p>
          </div>

          <!-- LEVEL -->
          <div>
            <h3 class="text-sm text-slate-400 uppercase tracking-wide mb-1">
              Level
            </h3>
            <p class="text-purple-300 font-semibold text-lg">
              <%= projectDetails.level %>
            </p>
          </div>

          <!-- DURATION -->
          <div>
            <h3 class="text-sm text-slate-400 uppercase tracking-wide mb-1">
              Duration
            </h3>
            <p class="text-yellow-300 font-semibold text-lg">
              <%= projectDetails.duration %>
            </p>
          </div>

          <!-- BUDGET -->
          <div>
            <h3 class="text-sm text-slate-400 uppercase tracking-wide mb-1">
              Budget
            </h3>
            <p class="text-emerald-300 font-semibold text-lg">
              <%= projectDetails.budget %>
            </p>
          </div>

        </div>

        <!-- RIGHT COLUMN -->
        <div class="space-y-8">

          <!-- DESCRIPTION -->
          <div>
            <h3 class="text-sm text-slate-400 uppercase tracking-wide mb-2">
              Description
            </h3>
            <p class="text-slate-300 leading-relaxed">
              <%= projectDetails.description %>
            </p>
          </div>

          <!-- SKILLS LIST -->
          <div>
            <h3 class="text-sm text-slate-400 uppercase tracking-wide mb-2">
              Required Skills
            </h3>

            <div class="flex flex-wrap gap-2">
              <% projectDetails.skills.forEach(skill => { %>
                <span class="px-3 py-1 bg-white/10 border border-white/10 
                             text-slate-200 text-xs rounded-full">
                  <%= skill %>
                </span>
              <% }) %>
            </div>
          </div>

          <!-- DELIVERABLES -->
          <div>
            <h3 class="text-sm text-slate-400 uppercase tracking-wide mb-2">
              Deliverables
            </h3>

            <ul class="list-disc pl-5 text-slate-300 space-y-1">
              <% projectDetails.deliverables.forEach(item => { %>
                <li><%= item %></li>
              <% }) %>
            </ul>
          </div>

        </div>
      </div>

      <!-- ACTION BUTTONS -->
      <div class="mt-12 flex justify-center  gap-5">

        <a href="/guest/project/apply/<%= projectId %>/<%= hostId %>/"
          class="px-8 py-3 bg-indigo-600 cursor-pointer relative z-50
                 text-white font-semibold rounded-lg shadow-lg  inline-block">
         Apply
       </a>

     

      </div>

    </div>
  </div>

  <%- include("./partials/footer") %>

</div>
