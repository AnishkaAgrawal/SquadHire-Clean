<%- include("./partials/head.ejs", { pageTitle: "Add Reel" }) %>

<div class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-black">

  <%- include("./partials/navbar.ejs" , {currentPage , user,isLoggedIn}) %>

  <!-- ADD REEL CARD -->
  <div class="flex items-center justify-center px-4 mt-16">

    <div class="w-full max-w-xl rounded-2xl
                bg-slate-900/80 backdrop-blur-xl border border-white/10
                shadow-[0_0_40px_-10px_rgba(236,72,153,0.35)]
                p-8">

      <!-- HEADER -->
      <h1 class="text-3xl font-extrabold text-center mb-2
                 bg-gradient-to-r from-pink-500 via-purple-500 to-indigo-500
                 bg-clip-text text-transparent">
        Add New Reel ðŸŽ¬
      </h1>

      <p class="text-center text-slate-400 mb-8 text-sm">
        Upload a short video and showcase your work
      </p>

      <!-- FORM -->
      <form action="/guest/reels/add"
            method="POST"
            enctype="multipart/form-data"
            class="space-y-6">

        <!-- VIDEO UPLOAD -->
        <div>
          <label class="text-slate-300 text-sm font-medium">
            Upload Video
          </label>
          <input
            type="file"
            name="videoUrl"
            accept="video/*"
            required
            class="mt-2 block w-full text-sm text-slate-300
                   file:mr-4 file:py-2 file:px-4
                   file:rounded-lg file:border-0
                   file:bg-indigo-600 file:text-white
                   hover:file:bg-indigo-700 transition" />
        </div>

        <!-- CAPTION -->
        <div>
          <label class="text-slate-300 text-sm font-medium">
            Caption
          </label>
          <textarea
            name="caption"
            rows="2"
            placeholder="Write something catchy..."
            class="w-full mt-2 px-4 py-2 rounded-lg
                    text-black border border-white/10
                   focus:outline-none focus:ring-2 focus:ring-indigo-500"></textarea>
        </div>

        <!-- DESCRIPTION -->
        <div>
          <label class="text-slate-300 text-sm font-medium">
            Description
          </label>
          <textarea
            name="description"
            rows="3"
            placeholder="Describe your reel (optional)"
            class="w-full mt-2 px-4 py-2 rounded-lg
                    text-black 
                   focus:outline-none focus:ring-2 focus:ring-indigo-500"></textarea>
          
        </div>

        <!-- ACTIONS -->
        <div class="flex gap-4 pt-4">

          <a href="/guest/reel"
             class="flex-1 text-center px-5 py-3 rounded-lg
                    bg-white/10 text-slate-300 hover:bg-white/20
                    transition">
            Cancel
          </a>

          <button
            type="submit"
            class="flex-1 px-5 py-3 rounded-lg text-white font-semibold
                   bg-gradient-to-r from-indigo-500 to-purple-600
                   hover:brightness-110 transition shadow-lg">
            Upload Reel
          </button>

        </div>

      </form>
    </div>
  </div>

  <%- include("./partials/footer.ejs") %>
</div>
